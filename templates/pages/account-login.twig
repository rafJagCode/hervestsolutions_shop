{% set global_page_title = 'Logowanie — Agroserwis' %}
{% set global_page_description = '' %}

{% from '/macros/controls.twig' import input_check %}

{% extends '/layouts/default.twig' %}

{% block site_body %}
    {% include '/blocks/block-space.twig' with {inputs: {layout: 'after-header'}} %}
    <div class="block">
        <div class="container container--max--lg">
            <div class="row">
                <div class="col-md-6 d-flex">
                    <div class="card flex-grow-1 mb-md-0 mr-0 mr-lg-3 ml-0 ml-lg-4">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Logowanie</h3>
							<div style="font-size: 12px;">
								<strong>Konto testowe:</strong>
								<ul style="padding-left: 12px;">
									<li>EMAIL: test@test.com</li>
									<li>HASŁO: test123</li>
								</ul>
							</div>
                            <form action="sign-in" method="POST" onSubmit="validateForm(this, event)">
                                <div class="form-group">
                                    <label for="signin-email">Adres email</label>
                                    <input name="email" id="signin-email" class="form-control" placeholder="przykładowy@email.com" value='test@test.com' data-validate="required,email">
                                </div>
                                <div class="form-group">
                                    <label for="signin-password">Hasło</label>
                                    <input name="password" id="signin-password" type="password" class="form-control" placeholder="Hasło" value='test123' data-validate="required">
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary mt-3">Zaloguj</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex mt-4 mt-md-0">
                    <div class="card flex-grow-1 mb-0 ml-0 ml-lg-3 mr-0 mr-lg-4">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Rejestracja</h3>
							{% if registerMessage is defined %}
							<h5 class="alert alert-danger">{{registerMessage}}</h5>
							{% endif %}
                            <form action="register" method="POST" onSubmit="validateForm(this, event)">
                                <div class="form-group">
                                    <label for="signup-email">Adres email</label>
                                    <input name="email" id="signup-email" class="form-control" placeholder="przykładowy@email.com" data-validate="required,email">
                                </div>
                                <div class="form-group">
                                    <label for="signup-password">Hasło</label>
                                    <input name="password" id="signup-password" type="password" class="form-control" placeholder="Hasło" data-validate="required,minLength-7">
                                </div>
                                <div class="form-group mb-0">
                                    <button type="submit" class="btn btn-primary mt-3">Zarejestruj</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include '/blocks/block-space.twig' with {inputs: {layout: 'before-footer'}} %}
{% endblock %}
