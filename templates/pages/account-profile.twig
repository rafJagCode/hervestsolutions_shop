{% set global_page_title = 'Account Profile — Red Parts' %}
{% set global_page_description = '' %}
{% set global_current_account_page = 'account-profile' %}

{% extends '/layouts/account.twig' %}

{% block account_body %}
    <div class="card">
        <div class="card-header">
            <h5>Edytuj Profil</h5>
        </div>
        <div class="card-divider"></div>
        <div class="card-body card-body--padding--2">
            <div class="row no-gutters">
                <form action="/account-submit-profile" method="post" class="col-12 col-lg-7 col-xl-6">
                    <div class="form-group">
                        <label for="profile-first-name">Imię</label>
                        <input name="firstName" stype="text" class="form-control" id="profile-first-name" placeholder="{{app.user.firstName is empty ? 'Imię' : app.user.firstName}}">
                    </div>
                    <div class="form-group">
                        <label for="profile-last-name">Nazwisko</label>
                        <input name="lastName" type="text" class="form-control" id="profile-last-name" placeholder="{{app.user.lastName is empty ? 'Nazwisko' : app.user.lastName}}">
                    </div>
                    <div class="form-group">
                        <label for="profile-phone">Numer Telefonu</label>
                        <input name="phone" type="text" class="form-control" id="profile-phone" placeholder="{{app.user.phone is empty ? 'Numer Telefonu' : app.user.phone}}">
                    </div>

                    <div class="form-group mb-0">
                        <button type="submit" class="btn btn-primary mt-3">Zapisz</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}