{% set global_header_scheme = {
  topbar_start_scheme: 'theme',
  topbar_end_scheme: 'dark'
} %}
{% set global_page_title = 'Home One â€” Red Parts' %}
{% set global_page_description = '' %}

{% extends '/layouts/default.twig' %}

{% block site_body %}
  {% include '/blocks/block-finder.twig' %}
  {% include '/blocks/block-features.twig' with {
    inputs: {
      layout: 'top-strip'
    }
  } %}
  {% include '/blocks/block-space.twig' with {
    inputs: {
      layout: 'divider-nl'
    }
  } %}
  {% include '/blocks/block-products-carousel.twig' with {
    inputs: {
      title: 'Featured Products',
      layout: 'grid-5',
      rows: 1,
      groups: [],
      selectedFourProducts: product_getter_service.getBestSellers()
    }
  } %}
  {% include '/blocks/block-space.twig' with {
    inputs: {
      layout: 'divider-nl'
    }
  } %}
  {% include '/blocks/block-sale.twig' %}
  {% include '/blocks/block-space.twig' with {
    inputs: {
      layout: 'divider-lg'
    }
  } %}
  {% include '/blocks/block-zone.twig' with {
    inputs: {
      category: {
        image: 'images/categories/category-overlay-1.jpg',
        image_mobile: 'images/categories/category-overlay-1-mobile.jpg',
        name: 'Producenci',
        children: producer_getter_service.getProducers()
      }
    }
  } %}
  {% include '/blocks/block-space.twig' with {
    inputs: {
      layout: 'divider-sm'
    }
  } %}

  {% include '/blocks/block-banners.twig' %}

  {% include '/blocks/block-space.twig' with {
    inputs: {
      layout: 'before-footer'
    }
  } %}
{% endblock %}
