{% set global_page_title = 'Checkout — Red Parts' %}
{% set global_page_description = '' %}

{% from '/macros/controls.twig' import input_check, input_radio %}

{% extends '/layouts/default.twig' %}

{% block site_body %}
    {% include '/blocks/block-header.twig' with {inputs: {
        title: 'Podsumowanie Zamówienia',
    }} %}

    <form action="/submit-order" method="post" class="checkout block">
        <div class="container container--max--xl">
            <div class="row">

                <div class="col-12 col-lg-6 col-xl-7">
                    <div class="card mb-lg-0">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Adres Rozliczeniowy</h3>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="checkout-first-name">Imię</label>
                                    <input type="text" class="form-control" id="checkout-first-name" placeholder="Imię" value="{{ app.user is null or app.user.firstName is empty ? '' : app.user.firstName}}" name="firstName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="checkout-last-name">Nazwisko</label>
                                    <input type="text" class="form-control" id="checkout-last-name" placeholder="Nazwisko" value="{{ app.user is null or app.user.lastName is empty ? '' : app.user.lastName}}" name="lastName">
                                </div>
                            </div>

							<div class="form-group">
								<label for="checkout-country">Kraj</label>
								<select id="checkout-country" class="form-control form-control-select2" name="country">
								</select>
							</div>
                            <div class="form-group">
                                <label for="checkout-city">Miasto i kod pocztowy</label>
                                <input type="text" class="form-control" id="checkout-city" placeholder="Misto i kod pocztowy" value="{{ app.user is null or app.user.city is empty ? '' : app.user.city}}" name="city">
                            </div>
                            <div class="form-group">
                                <label for="checkout-street-address">Ulica i numer budynku</label>
                                <input type="text" class="form-control" id="checkout-street-address" placeholder="Ulica i number budynku" value="{{ app.user is null or app.user.street is empty ? '' : app.user.street}}" name="street">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="checkout-email">Adres email</label>
                                    <input type="email" class="form-control" id="checkout-email" placeholder="Adres email" value="{{ app.user is null or app.user.email is empty ? '' : app.user.email}}" name="email">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="checkout-phone">Numer telefonu</label>
                                    <input type="text" class="form-control" id="checkout-phone" placeholder="Numer telefonu" value="{{ app.user is null or app.user.phone is empty ? '' : app.user.phone}}" name="phone">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 col-xl-5 mt-4 mt-lg-0">
                    <div class="card mb-0">
                        <div class="card-body card-body--padding--2">
                            <h3 class="card-title">Twoje Zamówienie</h3>

                            <table class="checkout__totals">
                                <thead class="checkout__totals-header">
                                <tr>
                                    <th>Produkt</th>
                                    <th>Koszt</th>
                                </tr>
                                </thead>
                                <tbody class="checkout__totals-products">
                                {% for cartItem in cart.cartItem %}
                                    <tr>
                                        <td>{{ cartItem.product.name }} × {{ cartItem.amount }}</td>
                                        <td>{{ cartItem.amount * cartItem.product.price }} zł</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tbody class="checkout__totals-subtotals">
									<tr>
										<th>Dostawa</th>
										<td>{{ 0 }}</td>
									</tr>
                                </tbody>
                                <tfoot class="checkout__totals-footer">
                                <tr>
                                    <th>Razem</th>
                                    <td style="white-space: pre">{{cart.cartItem|reduce((sum, item) => sum + item.product.price * item.amount)}} zł</td>
                                </tr>
                                </tfoot>
                            </table>

                            <div class="checkout__payment-methods payment-methods">
                                <ul class="payment-methods__list">
                                    <li class="payment-methods__item payment-methods__item--active">
                                        <label class="payment-methods__item-header">
                                            {{ input_radio({
                                                classes: 'payment-methods__item-radio',
                                                name: 'paymentMethod',
												value: 'payOnDelivery',
                                                checked: true,
                                            }) }}
                                            <span class="payment-methods__item-title">Płatność przy odbiorze</span>
                                        </label>
                                        <div class="payment-methods__item-container">
                                            <div class="payment-methods__item-details text-muted">
                                                Zapłać kurierowi przy odbiorze paczki.
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>

                            <button type="submit" class="btn btn-primary btn-xl btn-block">Złóż Zamówienie</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

    {% include '/blocks/block-space.twig' with {inputs: {layout: 'before-footer'}} %}
	<script type="text/javascript">
	document.addEventListener('DOMContentLoaded', () => {
		const options = [
			{
				text: 'Wybierz kraj...',
				value: 'none'
			},
			{
				text: 'Polska',
				value: 'Polska'
			}
		]
		options.forEach(option=>{
			const newOption = new Option(option.text, option.value, true, true);
			$('#checkout-country').append(newOption).change();
		});

		const country = "{{app.user.country is defined ? app.user.country : ''}}";
		if(!country || !country.length) $('#checkout-country').val('none').change();
		else $('#checkout-country').val(country).change();
	});
	</script>
{% endblock %}