<style>
	.search__dropdown{
		padding: 0;
	}
	.result_grid{
		display: grid;
		grid-template-rows: 1fr 1fr;
		grid-template-columns: 60px 1fr 60px 36px;
	}
	.result_grid__image{
		grid-row: 1/3;
		grid-column: 1;
		max-width: 40px;
		object-fit: contain;
	}
	.result_grid__name{
		grid-row: 1/3;
		grid-column: 2;
	}
	.result_grid__new_price{
		grid-row: 1/2;
		grid-column: 3;
		align-self: end;
	}
	.result_grid__old_price{
		grid-row: 2/3;
		grid-column: 3;
		align-self: start;
	}
	.result_grid__cart_button{
		grid-row: 1/3;
		grid-column: 4;
	}
</style>
<div class="search-results">
	{% for product in searchResults %}
		<div class="search-result product-card">
			<a class="search-result__link result_grid" href="/product/{{ product.id }}">
				<img class="search-result__image result_grid__image" src="{{ image( product.images[0], { size: 40 } ) }}" alt="{{product.name}}"/>

				<div class="search-result__name result_grid__name">
					{{ product.name }}
				</div>


				<div class="product-card__price product-card__price--new result_grid__new_price"><strong>{{ product.price }}zł</strong></div>
				<div class="product-card__price product-card__price--old result_grid__old_price"><small>{{ product.compareAtPrice }}zł</small></div>

				<button class="product-card__addtocart-icon result_grid__cart_button" type="button" aria-label="Add to cart" onclick="cartAddProduct(this,{{product.id}},'BUTTON', event)">
					<div class="add-to-cart__spinner-border">
						<span class=" spinner-border spinner-border-sm text-secondary" role=" status" aria-hidden=" true"></span>
					</div>

					{{ svg('cart-20.svg') }}
				</button>
			</a>
		</div>
	{% endfor %}
</div>
